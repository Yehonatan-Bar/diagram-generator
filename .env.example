# LLM Configuration
LLM_PROVIDER=gemini
LLM_API_KEY=your-api-key-here
LLM_MODEL=gemini-pro
USE_MOCK_LLM=false

# API Configuration
API_TITLE=Diagram Generator API
API_VERSION=1.0.0
API_DESCRIPTION=Convert natural language to cloud architecture diagrams
LOG_LEVEL=INFO
LOG_FORMAT=json

# Feature Flags
CLEANUP_TEMP_FILES=true
MAX_RETRY_ATTEMPTS=3

# Diagram Settings
TEMP_DIR=/tmp/diagrams
SUPPORTED_NODES=EC2,RDS,LoadBalancer,SQS,Lambda,S3

# Server Settings
ENVIRONMENT=development
CORS_ORIGINS=*

# Security Settings (optional)
REQUIRE_API_KEY=false
ALLOWED_API_KEYS=