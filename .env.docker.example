# Docker Environment Configuration Example
# Copy this file to .env for docker-compose

# Environment
ENVIRONMENT=production
LOG_LEVEL=INFO
LOG_FORMAT=json

# LLM Provider Configuration
LLM_PROVIDER=gemini
GEMINI_API_KEY=your-gemini-api-key-here
OPENAI_API_KEY=your-openai-api-key-here
USE_MOCK_LLM=false
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2000

# API Configuration
CORS_ORIGINS=["*"]
MAX_RETRIES=3
RETRY_DELAY=1.0
REQUEST_TIMEOUT=30.0

# Supported Nodes (comma-separated)
SUPPORTED_NODES=EC2,RDS,ALB,ELB,SQS,Lambda,S3,CloudFront,Route53,VPC,SecurityGroup,AutoScaling